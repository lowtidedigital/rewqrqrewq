# ShortFuse Terraform Variables
# Copy this file to terraform.tfvars and fill in your values

# Required variables
domain_name    = "example.com"
hosted_zone_id = "Z1234567890ABCDEF"

# Optional overrides
aws_region      = "us-east-1"
environment     = "prod"
project_name    = "shortfuse"
app_subdomain   = "app"
short_subdomain = "s"

stripe_price_starter = "price_1SmQWQRd9hGS6kHhuXA5XkpL"
app_url              = "https://app.linkharbour.io"

# put your real values here (keep private)
stripe_secret_key    = "REPLACE_WITH_STRIPE_SECRET_KEY"
stripe_webhook_secret = "REPLACE_WITH_STRIPE_WEBHOOK_SECRET"

# Lambda configuration
lambda_memory_size      = 256
lambda_timeout          = 10
redirect_lambda_timeout = 3

# DynamoDB configuration
dynamodb_billing_mode      = "PAY_PER_REQUEST"
enable_deletion_protection = true

# Additional callback URLs for local development
cognito_callback_urls = [
  "http://localhost:5173/",
  "http://localhost:5173/auth/callback"
]

cognito_logout_urls = [
  "http://localhost:5173/"
]

# Common tags
tags = {
  Owner = "your-team"
  CostCenter = "engineering"
}
